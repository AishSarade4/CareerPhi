{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023","DOM"],
    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react",

    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "types": ["vite/client"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
